#!/bin/bash

SPACECOUNT=100
SLEEPTIME=0.01
SPACES=""

while [ true ];
do
    for i in $( seq 0 $SPACECOUNT)
    do
        SPACES="$SPACES "
        echo "$SPACESðŸ¦†"
        sleep $SLEEPTIME
    done
    
    for i in $( seq 0 $SPACECOUNT)
    do
        SPACES=${SPACES%?}
        echo "$SPACESðŸ¦†"
        sleep $SLEEPTIME
    done
done

